<LinearLayout
    android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:weightSum="7">
<ScrollView
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="0dp">
    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"/>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_weight="2"
        android:id="@+id/etMessage"
        android:hint="enter your message"
       android:text="Hey there! I am currently at -  "

        android:maxLines="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_weight="1"
        android:id="@+id/quicksend"
        android:text="quick send"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <Button
        android:layout_weight="1"
        android:id="@+id/btn"
        android:text="share"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/startgeofencing"
            android:text="start geofencing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="0dp"
   android:layout_weight="5"
    tools:context="com.example.geolocator.myapplication.activities.MapsActivity" />
</LinearLayout>